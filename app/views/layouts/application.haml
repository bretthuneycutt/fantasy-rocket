                  %a.header-link{href: "#", 'data-toggle' => "dropdown"}
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    - if current_user.leagues.size > 0
                      - current_user.leagues.each do |league|
                        %li= link_to league.name, league
                      %li.divider
