<!DOCTYPE html>
%html
  %head
    %title= t(:site_name)
    %link{href: 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700', rel: 'stylesheet'}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %meta{name: "description", content: t(:description)}
    %meta{name: "og:description", content: t(:description)}
    %meta{property: "og:site_name", content: t(:site_name)}
    %meta{property: "og:image", content: asset_url('og_image.jpg')}
  %body
    - flash.each do |name, message|
      - if message.is_a?(String)
        %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
          %a.close{"data-dismiss" => "alert"} Ã—
          %div{:id => "flash_#{name}"}= message
    .header
      .container
        .row
          .col-md-12
            = link_to image_tag('logo.png', alt: t(:site_name), class: "logo"), root_path
            .links.clearfix
              = link_to "How it works", "http://nflwinspoolfaq.tumblr.com", class: "header-link"
              - if current_user
                .dropdown.navbar-right
                  %a.header-link{href: "#", 'data-toggle' => "dropdown"}
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    - if current_user.leagues.size > 0
                      - current_user.leagues.each do |league|
                        %li= link_to league.name, league
                      %li.divider
                    %li= link_to "+ Start a League", new_league_path
                    %li.divider
                    %li= link_to "Log Out", session_path("current"), method: "delete"
              - else
                = link_to "Start a league", new_user_path, class: "header-link"
                = link_to "Sign in", new_session_path, class: "header-link"
    = yield

