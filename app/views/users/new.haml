%h1 Sign Up

= form_for @user do |f|
  = hidden_field_tag :redirect_to, params[:redirect_to]

  - if @user.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
      - @user.errors.full_messages.each do |message|
        %li= message

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :password
    %br
    = f.password_field :password
  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation

  .actions
    = f.submit "Sign Up"
